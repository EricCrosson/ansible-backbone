#!/usr/bin/env bash
# Written by <%= author %>
# <%= date %>
#
# Apply the ansible role provided by this project on localhost.

set -o nounset

# TODO: make this cross-platform (sed flags do not work on macos)
readonly root="$(readlink -f "$(dirname "$0")" | sed -r 's/\/bin.*//')"
pushd "${root}" >/dev/null

ansible-playbook -i localhost, site.yml "$@"
